@model List<Entidades.Jugador>
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1 class="p-5">Jugadores Cargados</h1>



    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Club</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Entidades.Jugador jug in Model)
            {
                <tr>
                    <td scope="row">@jug.Nombre</td>
                    <td>@jug.Apellido</td>
                    <td>@jug.Club</td>
                </tr>
            }

        </tbody>
    </table>


